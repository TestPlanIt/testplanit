{
  "name": "@testplanit/api",
  "version": "0.1.0",
  "description": "Official JavaScript/TypeScript API client for TestPlanIt - test management platform",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:cov": "vitest --coverage",
    "prepublishOnly": "pnpm build",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "testplanit",
    "api",
    "client",
    "test-management",
    "testing",
    "qa",
    "sdk"
  ],
  "author": "TestPlanIt",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/testplanit/testplanit.git",
    "directory": "packages/api"
  },
  "bugs": {
    "url": "https://github.com/testplanit/testplanit/issues"
  },
  "homepage": "https://github.com/testplanit/testplanit/tree/main/packages/api#readme",
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0"
  }
}
