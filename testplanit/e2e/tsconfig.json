{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    // Relax strict type checking for E2E tests
    // Playwright fixtures use complex type inference that can result in implicit any
    "noImplicitAny": false,
    "strict": false,
    // E2E tests don't need incremental compilation
    "incremental": false
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "test-results",
    "playwright-report"
  ]
}
