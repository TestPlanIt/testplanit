{
  "name": "@testplanit/cli",
  "version": "0.1.0",
  "description": "CLI tool for TestPlanIt - import test results and manage test data",
  "type": "module",
  "bin": {
    "testplanit": "./bin/testplanit.js"
  },
  "main": "./dist/index.js",
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --clean",
    "dev": "tsup src/index.ts --format esm --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "build:binaries": "bun run build:linux && bun run build:macos-arm64 && bun run build:macos-x64 && bun run build:windows",
    "build:linux": "bun build src/index.ts --compile --target=bun-linux-x64 --outfile=releases/testplanit-linux-x64",
    "build:macos-arm64": "bun build src/index.ts --compile --target=bun-darwin-arm64 --outfile=releases/testplanit-macos-arm64",
    "build:macos-x64": "bun build src/index.ts --compile --target=bun-darwin-x64 --outfile=releases/testplanit-macos-x64",
    "build:windows": "bun build src/index.ts --compile --target=bun-windows-x64 --outfile=releases/testplanit-windows-x64.exe"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "conf": "^13.0.1",
    "form-data": "^4.0.1",
    "glob": "^11.0.0",
    "ora": "^8.1.1"
  },
  "devDependencies": {
    "@types/bun": "^1.1.14",
    "@types/node": "^22.10.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "testplanit",
    "test-management",
    "junit",
    "cli"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/testplanit/testplanit.git",
    "directory": "cli"
  },
  "license": "Apache-2.0"
}
